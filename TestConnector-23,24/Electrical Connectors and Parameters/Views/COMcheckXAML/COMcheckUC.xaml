            <ComboBoxItem Content="Police"/>
            <ComboBoxItem Content="Post Office"/>
            <ComboBoxItem Content="Religious Building"/>
            <ComboBoxItem Content="Retail"/>
            <ComboBoxItem Content="School/University"/>
            <ComboBoxItem Content="Sports Arena"/>
            <ComboBoxItem Content="Town Hall"/>
            <ComboBoxItem Content="Transportation"/>
            <ComboBoxItem Content="Warehouse"/>
            <ComboBoxItem Content="Workshop"/>
        </ComboBox>


        <ComboBox Name = "Browser" Height="28" Width="200" HorizontalAlignment ="Right" VerticalAlignment="Top" Margin="10,10,0,0" VerticalContentAlignment="Center" Text="Browser" IsEditable="True" IsReadOnly="True" Focusable="False" Grid.Row="2" Grid.Column="0">
            <ComboBoxItem Content="Google Chrome"/>
            <ComboBoxItem Content="Mozilla Firefox"/>
        </ComboBox>


        <TextBox
        Name ="projectAddressTextBox"
        TextWrapping="NoWrap"
        AcceptsReturn="True"
        VerticalScrollBarVisibility="Visible"
        Grid.Row="3" Grid.Column="0" Margin="10,10,0,0"
        Height="28" VerticalAlignment="Top" VerticalContentAlignment="Center"  
        PreviewMouseLeftButtonDown="ProjectAddressTextBox_GotFocus"
        GotFocus="ProjectAddressTextBox_GotFocus">


            Project Address
        </TextBox>

        <TextBox
        Name ="projectCityTextBox"
        TextWrapping="NoWrap"
        AcceptsReturn="True"
        VerticalScrollBarVisibility="Visible"
        Grid.Row="3" Grid.Column="1" Margin="20,10,10,10"
        Height="28" Width="100" VerticalContentAlignment="Center"
        PreviewMouseLeftButtonDown="ProjectCityTextBox_GotFocus"
        GotFocus="ProjectCityTextBox_GotFocus">
            City
        </TextBox>

        <TextBox
        Name ="zipTextBox"
        TextWrapping="NoWrap"
        AcceptsReturn="True"
        VerticalScrollBarVisibility="Visible"
        Grid.Row="4" Grid.Column="0" Margin="10,0,0,0"
        Height="28" Width="100" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Left"
        PreviewMouseLeftButtonDown="zipTextBox_GotFocus"
        GotFocus="zipTextBox_GotFocus">
            Zip
        </TextBox>

        <Button Name="runComcheck" Content="Run COMcheck" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.Row="5" Grid.Column="1" Margin="0,20,10,10" Click="RunComcheck_Click"/>
    </Grid>
</UserControl>
